<h1 class="display-6">Productos</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Productos</li>
    </ol>
</nav>

<a href="/" class="btn btn-primary">Nuevo producto</a>


<div class="mt-3">
    <% if (products.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto de producto</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < products.length; i++) { %>
                    <tr>
                        <th scope="row"><%=products[i].id%></th>
                        <td><%=products[i].title%></td>
                        <td><%=products[i].price%></td>
                        <td><img src="<%=products[i].thumbnail%>" alt="<%=products[i].title%>" width="30"></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    <% }else{ %>
        <div class="alert alert-warning" role="alert">
            Lista de productos vac√≠a
        </div>
    <% } %>
</div>


<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="/productos" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <li class="page-item active"><a class="page-link" href="/productos">1</a></li>
        <li class="page-item"><a class="page-link" href="/productos">2</a></li>
        <li class="page-item"><a class="page-link" href="/productos">3</a></li>

        <li class="page-item">
            <a class="page-link" href="/productos" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>