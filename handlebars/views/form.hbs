<h1 class="display-6">Productos</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/productos">Productos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Agregar producto</li>
    </ol>
</nav>


<form action="/productos" method="post">
    <div class="row g-3">
        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
            <input type="text" required class="form-control" placeholder="Nombre*" name="title">
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
            <input type="number" required class="form-control" placeholder="Precio*" name="price">
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-6">
            <input type="url" required class="form-control" placeholder="URL foto*" name="url">
        </div>

        <div class="alert alert-primary" role="alert">
            Complete los campos obligatorios (*)
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success">Guardar</button>
        </div>
    </div>
</form>
