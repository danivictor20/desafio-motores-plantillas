<h1 class="display-6">Productos</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Productos</li>
    </ol>
</nav>

<a href="/" class="btn btn-primary">Nuevo producto</a>


<div class="mt-3">
    {{#if prods}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto de producto</th>
                </tr>
            </thead>
            <tbody>
                {{#each prods}}
                    <tr>
                        <th scope="row">{{ this.id }}</th>
                        <td>{{ this.title }}</td>
                        <td>{{ this.price }}</td>
                        <td><img src="{{ this.thumbnail }}" alt="{{ this.title }}" width="25"></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="alert alert-warning" role="alert">
            Lista de productos vac√≠a
        </div>
    {{/if}}
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="/productos" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <li class="page-item active"><a class="page-link" href="/productos">1</a></li>
        <li class="page-item"><a class="page-link" href="/productos">2</a></li>
        <li class="page-item"><a class="page-link" href="/productos">3</a></li>

        <li class="page-item">
            <a class="page-link" href="/productos" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>